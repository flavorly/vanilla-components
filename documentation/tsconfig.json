{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": ".vitepress/dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "baseUrl": "./",
    "removeComments": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vite/client",
      "node"
    ],
    "paths": {
      "/@theme/*": [".vitepress/theme/*"],
      "@flavorly/vanilla-components": ["../packages/vanilla-components/src/*"]
    },
    "allowJs": false
  },
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.js",
    ".vitepress/**/*",
    "utils/*"
  ],
  "exclude": [
    "node_modules"
  ],
}
